{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ContextGovernance",
  "type": "object",
  "required": [
    "context",
    "models",
    "piiModelCount",
    "piiFieldCount",
    "regulatoryFrameworks",
    "qualityChecks"
  ],
  "properties": {
    "context": {
      "type": "object",
      "required": ["name", "displayName", "description"],
      "properties": {
        "name": { "type": "string" },
        "displayName": { "type": "string" },
        "description": { "type": "string" },
        "metadata": { "type": ["object", "null"] }
      },
      "additionalProperties": true
    },
    "ownerTeam": { "type": ["string", "null"] },
    "dataSteward": { "type": ["string", "null"] },
    "dataClassification": { "type": ["string", "null"] },
    "businessCriticality": { "type": ["string", "null"] },
    "defaultRetention": { "type": ["string", "null"] },
    "dataResidency": {
      "type": ["object", "null"],
      "properties": {
        "primaryRegion": { "type": "string" },
        "failoverRegion": { "type": "string" }
      },
      "additionalProperties": true
    },
    "regulatoryFrameworks": {
      "type": "array",
      "items": { "type": "string" }
    },
    "qualityChecks": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "cadence", "owner"],
        "properties": {
          "name": { "type": "string" },
          "cadence": { "type": "string" },
          "owner": { "type": "string" }
        },
        "additionalProperties": true
      }
    },
    "piiModelCount": { "type": "integer", "minimum": 0 },
    "piiFieldCount": { "type": "integer", "minimum": 0 },
    "review": {
      "type": ["object", "null"],
      "properties": {
        "id": { "type": ["integer", "null"] },
        "contextName": { "type": ["string", "null"] },
        "ownerTeam": { "type": ["string", "null"] },
        "dataSteward": { "type": ["string", "null"] },
        "reviewStatus": { "type": ["string", "null"] },
        "reviewedAt": { "type": ["string", "null"], "format": "date-time" },
        "nextReviewDueAt": { "type": ["string", "null"], "format": "date-time" },
        "scorecard": { "type": ["object", "null"] },
        "notes": { "type": ["string", "null"] },
        "createdAt": { "type": ["string", "null"], "format": "date-time" },
        "updatedAt": { "type": ["string", "null"], "format": "date-time" }
      },
      "additionalProperties": true
    },
    "models": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "tableName", "piiFields", "attributes"],
        "properties": {
          "name": { "type": "string" },
          "tableName": { "type": ["string", "null"] },
          "retention": { "type": ["string", "null"] },
          "classification": { "type": ["string", "null"] },
          "piiFields": {
            "type": "array",
            "items": { "type": "string" }
          },
          "attributes": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["name", "type", "allowNull", "pii"],
              "properties": {
                "name": { "type": "string" },
                "type": { "type": ["string", "null"] },
                "allowNull": { "type": "boolean" },
                "pii": { "type": "boolean" },
                "retention": { "type": ["string", "null"] },
                "description": { "type": ["string", "null"] }
              },
              "additionalProperties": false
            }
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
