{
  "$ref": "#/definitions/Schema",
  "definitions": {
    "Schema": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer",
          "exclusiveMinimum": 0
        },
        "key": {
          "type": "string",
          "minLength": 3,
          "maxLength": 120
        },
        "name": {
          "type": "string",
          "maxLength": 255
        },
        "description": {
          "type": "string"
        },
        "status": {
          "type": "string",
          "enum": [
            "draft",
            "active",
            "disabled"
          ]
        },
        "rolloutType": {
          "type": "string",
          "enum": [
            "global",
            "percentage",
            "cohort"
          ]
        },
        "rolloutPercentage": {
          "anyOf": [
            {
              "type": "number",
              "minimum": 0,
              "maximum": 100
            },
            {
              "type": "null"
            }
          ]
        },
        "metadata": {
          "type": "object",
          "additionalProperties": {}
        }
      },
      "required": [
        "id",
        "key",
        "name",
        "status",
        "rolloutType",
        "rolloutPercentage"
      ],
      "additionalProperties": false
    }
  },
  "$schema": "http://json-schema.org/draft-07/schema#"
}
