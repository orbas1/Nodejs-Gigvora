{
  "$ref": "#/definitions/Schema",
  "definitions": {
    "Schema": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer",
          "exclusiveMinimum": 0
        },
        "projectId": {
          "type": "integer",
          "exclusiveMinimum": 0
        },
        "status": {
          "type": "string",
          "enum": [
            "briefing",
            "active",
            "blocked",
            "completed"
          ]
        },
        "healthScore": {
          "anyOf": [
            {
              "type": "number",
              "minimum": 0,
              "maximum": 100
            },
            {
              "type": "null"
            }
          ]
        },
        "velocityScore": {
          "anyOf": [
            {
              "type": "number",
              "minimum": 0,
              "maximum": 100
            },
            {
              "type": "null"
            }
          ]
        },
        "riskLevel": {
          "type": "string",
          "enum": [
            "low",
            "medium",
            "high"
          ]
        },
        "progressPercent": {
          "anyOf": [
            {
              "type": "number",
              "minimum": 0,
              "maximum": 100
            },
            {
              "type": "null"
            }
          ]
        },
        "clientSatisfaction": {
          "anyOf": [
            {
              "type": "number",
              "minimum": 0,
              "maximum": 5
            },
            {
              "type": "null"
            }
          ]
        },
        "automationCoverage": {
          "anyOf": [
            {
              "type": "number",
              "minimum": 0,
              "maximum": 100
            },
            {
              "type": "null"
            }
          ]
        },
        "billingStatus": {
          "type": [
            "string",
            "null"
          ]
        },
        "nextMilestone": {
          "type": [
            "string",
            "null"
          ]
        },
        "nextMilestoneDueAt": {
          "anyOf": [
            {
              "type": "string",
              "format": "date-time"
            },
            {
              "type": "null"
            }
          ]
        },
        "lastActivityAt": {
          "anyOf": [
            {
              "type": "string",
              "format": "date-time"
            },
            {
              "type": "null"
            }
          ]
        }
      },
      "required": [
        "id",
        "projectId",
        "status",
        "healthScore",
        "velocityScore",
        "riskLevel",
        "progressPercent",
        "clientSatisfaction",
        "automationCoverage",
        "billingStatus",
        "nextMilestone",
        "nextMilestoneDueAt",
        "lastActivityAt"
      ],
      "additionalProperties": false
    }
  },
  "$schema": "http://json-schema.org/draft-07/schema#"
}
