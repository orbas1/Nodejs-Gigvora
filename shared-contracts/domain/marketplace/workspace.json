{
  "$ref": "#/definitions/Schema",
  "definitions": {
    "Schema": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer",
          "exclusiveMinimum": 0
        },
        "projectId": {
          "type": "integer",
          "exclusiveMinimum": 0
        },
        "status": {
          "type": "string",
          "enum": [
            "briefing",
            "active",
            "blocked",
            "completed"
          ]
        },
        "healthScore": {
          "anyOf": [
            {
              "type": "number",
              "minimum": 0,
              "maximum": 100
            },
            {
              "type": "null"
            }
          ]
        },
        "velocityScore": {
          "anyOf": [
            {
              "type": "number",
              "minimum": 0,
              "maximum": 100
            },
            {
              "type": "null"
            }
          ]
        },
        "riskLevel": {
          "type": "string",
          "enum": [
            "low",
            "medium",
            "high"
          ]
        },
        "progressPercent": {
          "anyOf": [
            {
              "type": "number",
              "minimum": 0,
              "maximum": 100
            },
            {
              "type": "null"
            }
          ]
        },
        "clientSatisfaction": {
          "anyOf": [
            {
              "type": "number",
              "minimum": 0,
              "maximum": 5
            },
            {
              "type": "null"
            }
          ]
        },
        "automationCoverage": {
          "anyOf": [
            {
              "type": "number",
              "minimum": 0,
              "maximum": 100
            },
            {
              "type": "null"
            }
          ]
        },
        "billingStatus": {
          "type": [
            "string",
            "null"
          ]
        },
        "nextMilestone": {
          "type": [
            "string",
            "null"
          ]
        },
        "nextMilestoneDueAt": {
          "anyOf": [
            {
              "type": "string",
              "format": "date-time"
            },
            {
              "type": "null"
            }
          ]
        },
        "lastActivityAt": {
          "anyOf": [
            {
              "type": "string",
              "format": "date-time"
            },
            {
              "type": "null"
            }
          ]
        },
        "searchFilters": {
          "type": "object",
          "properties": {
            "ranking": {
              "type": "object",
              "properties": {
                "score": {
                  "type": "number",
                  "minimum": 0,
                  "maximum": 100
                },
                "tier": {
                  "type": "string",
                  "enum": [
                    "signature",
                    "premium",
                    "core",
                    "emerging"
                  ]
                },
                "lastEvaluatedAt": {
                  "anyOf": [
                    {
                      "type": "string",
                      "format": "date-time"
                    },
                    {
                      "type": "null"
                    }
                  ]
                },
                "algorithmVersion": {
                  "type": [
                    "string",
                    "null"
                  ]
                },
                "signals": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                }
              },
              "required": [
                "score",
                "tier"
              ],
              "additionalProperties": false
            },
            "freshness": {
              "type": "object",
              "properties": {
                "status": {
                  "type": "string",
                  "enum": [
                    "vibrant",
                    "active",
                    "cooling",
                    "dormant"
                  ]
                },
                "updatedAt": {
                  "anyOf": [
                    {
                      "type": "string",
                      "format": "date-time"
                    },
                    {
                      "type": "null"
                    }
                  ]
                },
                "daysSinceInteraction": {
                  "anyOf": [
                    {
                      "type": "integer",
                      "minimum": 0
                    },
                    {
                      "type": "null"
                    }
                  ]
                },
                "decayRate": {
                  "anyOf": [
                    {
                      "type": "number",
                      "minimum": 0
                    },
                    {
                      "type": "null"
                    }
                  ]
                },
                "signals": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                }
              },
              "required": [
                "status"
              ],
              "additionalProperties": false
            },
            "audienceTags": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "highlightedMentors": {
              "type": "array",
              "items": {
                "type": "integer",
                "minimum": 1
              }
            },
            "featuredGroups": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          },
          "required": [
            "ranking",
            "freshness"
          ],
          "additionalProperties": false
        }
      },
      "required": [
        "id",
        "projectId",
        "status",
        "healthScore",
        "velocityScore",
        "riskLevel",
        "progressPercent",
        "clientSatisfaction",
        "automationCoverage",
        "billingStatus",
        "nextMilestone",
        "nextMilestoneDueAt",
        "lastActivityAt",
        "searchFilters"
      ],
      "additionalProperties": false
    }
  },
  "$schema": "http://json-schema.org/draft-07/schema#"
}
