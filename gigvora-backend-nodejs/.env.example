# -----------------------------------------------------------------------------
# Application
# -----------------------------------------------------------------------------
NODE_ENV=development
APP_NAME=GigVora
PORT=5000
APP_URL=http://localhost:5000
CLIENT_URL=http://localhost:5173
API_URL=http://localhost:5000/api
REQUEST_BODY_LIMIT=1mb
LOG_LEVEL=info
TRUST_PROXY=false
ENABLE_HTTP_LOGGING=true
ENABLE_PROMETHEUS_METRICS=true
METRICS_BEARER_TOKEN=generate-64-character-random-token
ENABLE_BACKGROUND_WORKERS=true
ENABLE_PROFILE_ENGAGEMENT_WORKER=true
PROFILE_ENGAGEMENT_INTERVAL_MS=30000
ENABLE_NEWS_AGGREGATION_WORKER=true
NEWS_AGGREGATION_INTERVAL_MS=300000
RUNTIME_CONFIG_FILE=./config/runtime.env
RUNTIME_CONFIG_HOT_RELOAD=false
JWT_SECRET=replace-with-64-character-secret
JWT_REFRESH_SECRET=replace-with-64-character-refresh-secret
JWT_EXPIRES_IN=1h
SESSION_COOKIE_NAME=gigvora.sid
SESSION_COOKIE_DOMAIN=localhost
SESSION_COOKIE_SECURE=false
PASSWORD_RESET_TOKEN_TTL_MINUTES=30
TWO_FA_EMAIL_FROM=no-reply@gigvora.com
TWO_FA_EMAIL_SUBJECT="Your Gigvora verification code"

# -----------------------------------------------------------------------------
# HTTP Security & CORS
# -----------------------------------------------------------------------------
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:4173
CORS_ALLOWED_METHODS=GET,POST,PUT,PATCH,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With,X-User-Id,X-Roles
TRUSTED_FORWARD_HEADERS=X-Forwarded-For,X-Forwarded-Proto
RATE_LIMITER_POINTS=120
RATE_LIMITER_DURATION_SECONDS=60

# -----------------------------------------------------------------------------
# Calendar Stub Security
# -----------------------------------------------------------------------------
CALENDAR_STUB_BASE_URL=http://localhost:4010
CALENDAR_STUB_HOST=0.0.0.0
CALENDAR_STUB_PORT=4010
CALENDAR_STUB_API_KEY=
CALENDAR_STUB_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:4173
CALENDAR_STUB_VIEW_ROLES=calendar:view,calendar:manage,platform:admin
CALENDAR_STUB_MANAGE_ROLES=calendar:manage,platform:admin
CALENDAR_STUB_FALLBACK_ORIGIN=http://localhost:4173
CALENDAR_STUB_DEFAULT_WORKSPACE_SLUG=acme-talent-hub
CALENDAR_STUB_DEFAULT_WORKSPACE_ID=101
CALENDAR_STUB_RELEASE_CHANNEL=stable
CALENDAR_STUB_REGION=us-central
CALENDAR_STUB_BUILD_NUMBER=2024.10.1
CALENDAR_STUB_OWNER_TEAM=Integrations Platform

# -----------------------------------------------------------------------------
# Database (MySQL 8+)
# -----------------------------------------------------------------------------
DB_DIALECT=mysql
DB_HOST=localhost
DB_PORT=3306
DB_NAME=gigvora
DB_USER=gigvora
DB_PASSWORD=update-with-strong-password
DB_URL=
DB_SSL=false

# -----------------------------------------------------------------------------
# Cache & Messaging
# -----------------------------------------------------------------------------
REDIS_URL=redis://localhost:6379/0
QUEUE_CONCURRENCY=5

# -----------------------------------------------------------------------------
# Commission management
# -----------------------------------------------------------------------------
PLATFORM_COMMISSIONS_ENABLED=true
PLATFORM_COMMISSION_RATE=12.5
PLATFORM_COMMISSION_CURRENCY=USD
PLATFORM_COMMISSION_MINIMUM_FEE=0
FEATURE_COMMISSIONS_ENABLED=true

# -----------------------------------------------------------------------------
# Subscription management
# -----------------------------------------------------------------------------
PLATFORM_SUBSCRIPTIONS_ENABLED=true
PLATFORM_SUBSCRIPTION_RESTRICTED_FEATURES=premium-support,advanced-analytics
FEATURE_SUBSCRIPTIONS_ENABLED=true

# -----------------------------------------------------------------------------
# Payment providers
# -----------------------------------------------------------------------------
PAYMENT_PROVIDER=stripe
STRIPE_PUBLISHABLE_KEY=
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
STRIPE_ACCOUNT_ID=
ESCROW_COM_API_KEY=
ESCROW_COM_API_SECRET=
ESCROW_COM_SANDBOX=true
FEATURE_ESCROW_ENABLED=true

# -----------------------------------------------------------------------------
# SMTP
# -----------------------------------------------------------------------------
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM_ADDRESS=no-reply@example.com
SMTP_FROM_NAME=GigVora Team

# -----------------------------------------------------------------------------
# Cloudflare R2 object storage
# -----------------------------------------------------------------------------
CLOUDFLARE_R2_ACCOUNT_ID=
CLOUDFLARE_R2_ACCESS_KEY_ID=
CLOUDFLARE_R2_SECRET_ACCESS_KEY=
CLOUDFLARE_R2_BUCKET=
CLOUDFLARE_R2_ENDPOINT=https://<account-id>.r2.cloudflarestorage.com
CLOUDFLARE_R2_PUBLIC_BASE_URL=

# -----------------------------------------------------------------------------
# Third-party integrations
# -----------------------------------------------------------------------------
AGORA_APP_ID=
AGORA_APP_CERTIFICATE=
AGORA_TOKEN_TTL=3600

# -----------------------------------------------------------------------------
# Feature flags
# -----------------------------------------------------------------------------
ENABLE_PLATFORM_ANALYTICS=true
ENABLE_AUDIT_LOG_EXPORTS=true
ENABLE_REPUTATION_WIDGETS=true
